<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:background="@drawable/recycler_background"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/list_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="User"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/list_shoppingItem_delete"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        />

    <ImageView
        android:id="@+id/list_user_delete"
        android:layout_width="31dp"
        android:layout_height="21dp"
        android:background="@drawable/button_background_straight_green"
        android:src="@mipmap/ic_pluss"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/list_shopping_item_itemName"
        app:layout_constraintTop_toTopOf="parent"/>




</android.support.constraint.ConstraintLayout>